[Unit]
Description=Monitor and restart screen.py
After=init_display.service

[Service]
Type=simple
ExecStart="${PROJECT_PATH}/venv/bin/python3" "${PROJECT_PATH}/src/screen/screen.py"
WorkingDirectory="${PROJECT_PATH}"
PIDFile=/var/run/screen.pid
TimeoutSec=5
Restart=always

[Install]
WantedBy=multi-user.target